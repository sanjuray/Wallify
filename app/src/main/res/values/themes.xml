<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Wallify" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary Band Colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--Secondary Band Colors-->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!--Status bar color -->
        <item name = "android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">

        <item name="android:textSize">.01sp</item>
        <item name="android:alpha">0.0</item>
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="actionTextColorAlpha">0</item>

    </style>

    <style name="Toolbar.TitleText.Expanded" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">

        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:alpha">0.0</item>
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="actionTextColorAlpha">0</item>

    </style>


    <style name="Tab">

        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="tabGravity">center</item>
        <item name="actionTextColorAlpha">0</item>

    </style>

    <style name="roundedImageView" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp</item>>

    </style>

    <style name="Theme.Wallify" parent="Base.Theme.Wallify" />
</resources>