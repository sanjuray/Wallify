<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/main_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_mono_medium"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:text="@string/dialog_what"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/set_home_screen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_mono_medium"
                android:text="Set Home Screen"
                android:textColor="@color/white"
                android:backgroundTint="@color/main_background"
                android:drawableLeft="@drawable/baseline_add_to_home_screen" />

            <Button
                android:id="@+id/set_lock_screen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_mono_medium"
                android:text="Set Lock Screen"
                android:textColor="@color/white"
                android:backgroundTint="@color/main_background"
                android:drawableLeft="@drawable/baseline_set_wall" />

            <Button
                android:id="@+id/set_both"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_mono_medium"
                android:text="Set Both"
                android:textColor="@color/white"
                android:backgroundTint="@color/main_background"
                android:drawableLeft="@drawable/baseline_lock_home" />

            <Button
                android:id="@+id/download"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_mono_medium"
                android:text="Download"
                android:textColor="@color/white"
                android:backgroundTint="@color/main_background"
                android:drawableLeft="@drawable/baseline_download" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>